        "/api/messages/public": {
            "get": {
                "summary": "Get encrypted messages from a chat (public endpoint - messages are encrypted, cannot be read without private keys)",
                "tags": ["Message"],
                "security": [],
                "parameters": [
                    {
                        "name": "chatId",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        },
                        "description": "Chat ID to fetch encrypted messages from"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Encrypted messages from chat (content is encrypted and unreadable without private key)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string",
                                                "format": "uuid"
                                            },
                                            "ciphertext": {
                                                "type": "string",
                                                "description": "Encrypted message content (Base64 encoded)"
                                            },
                                            "iv": {
                                                "type": "string",
                                                "description": "Initialization vector for AES-GCM (Base64 encoded)"
                                            },
                                            "senderId": {
                                                "type": "string",
                                                "format": "uuid"
                                            },
                                            "sender": {
                                                "type": "object",
                                                "properties": {
                                                    "email": {
                                                        "type": "string"
                                                    }
                                                }
                                            },
                                            "createdAt": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request - Missing chatId parameter"
